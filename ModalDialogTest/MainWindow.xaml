<Window x:Class="ModalDialogTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525"
        DataContext="{Binding Source={StaticResource Locator}, Path=Person}">
    <StackPanel Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top" >
        <Button Content="Open Dialog" Click="Button_Click" Height="30" Width="90" Margin="10" HorizontalAlignment="Left"></Button>
        <TextBlock Text="{Binding Full}" Margin="10" HorizontalAlignment="Left"/>
    </StackPanel>
</Window>
